<h1><%= t("titles.login.new") %></h1>

<p><%= t("login.disclaimer_html", url: signup_path) %></p>

<%= form_tag login_path(return_to: params[:return_to]) do %>
  <p>
    <%= label_tag :email, t("form.labels.user.email") %>
    <%= email_field_tag :email, params[:email] %>
  </p>
  <p>
    <%= label_tag :password, t("form.labels.user.password") %>
    <%= password_field_tag :password, params[:password] %>
  </p>

  <p class="submit">
    <%= submit_tag t("helpers.submit.login") %>
    <%= link_to t("action.back"), root_path %>
  </p>
<% end %>
