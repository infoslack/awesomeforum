<h1><%= t("titles.questions.new") %></h1>

<%= form_for @question, url: new_question_path do |f| %>
  <%= render "shared/form_errors", record: @question %>

  <p>
    <%= f.label :title, t("form.labels.question.title") %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content, t("form.labels.question.content") %>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.label :category_id, t("form.labels.question.category") %>
    <%= f.collection_select :category_id, @categories, :id, :name,
      include_blank: true %>
  </p>

  <p class="submit">
    <%= f.submit %>
    <%= link_to t("action.back"), root_path %>
  </p>
<% end %>
